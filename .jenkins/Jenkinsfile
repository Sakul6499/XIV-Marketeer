pipeline {
    agent {
        label 'docker'
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('NPM Version') {
            agent {
                docker { 
                    image 'node:current-alpine' 
                    reuseNode true
                }
            }
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        stage('Build') {
            agent {
                docker { 
                    image 'node:current-alpine' 
                    reuseNode true
                }
            }
            steps {
                sh 'npm cache clean --force'
                sh "export npm_config_cache=$(PWD)/local_cache"
                sh 'npm install'
                sh 'npm run build'
            }
        }
    }
}
