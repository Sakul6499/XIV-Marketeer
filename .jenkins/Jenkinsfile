pipeline {
    agent {
        label 'docker'
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('NPM Version') {
            agent {
                docker { 
                    image 'node:current-alpine' 
                    reuseNode true
                }
            }
            steps {
                sh 'node --version'
                sh 'npm --version'
            }
        }
        stage('Dependencies') {
            agent {
                docker { 
                    image 'node:current-alpine' 
                    reuseNode true
                }
            }
            steps {
                sh 'npm install --unsafe-perm'
            }
        }
        stage('Build') {
            agent {
                docker { 
                    image 'node:current-alpine' 
                    reuseNode true
                }
            }
            steps {
                sh 'npm run build --unsafe-perm'
            }
        }
    }
}
